---
// WHY Layout.astro: Base template for all pages with consistent dark theme
// WHY dark theme default (#111111): Matches reference portfolio design, photos stand out
import Navigation from '../components/Navigation.astro';

interface Props {
	title?: string;
}

const { title = 'Portfolio' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Photo portfolio website" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- WHY theme-color: Matches background for seamless mobile browser UI -->
		<meta name="theme-color" content="#111111" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<!-- WHY bg-background text-text-primary: Dark theme with light text for photo gallery -->
	<body class="bg-background text-text-primary antialiased">
		<div class="min-h-screen flex flex-col">
			<header class="bg-background/95 backdrop-blur-sm sticky top-0 z-50">
				<div class="container mx-auto">
					<!-- WHY max-w-7xl: Reasonable max width for large screens, prevents overly wide content -->
					<div class="max-w-7xl">
						<Navigation />
					</div>
				</div>
			</header>

			<main class="flex-1">
				<slot />
			</main>

			<footer class="border-t border-white/10 py-8 mt-16">
				<!-- WHY container mx-auto: Centers footer content with consistent margins -->
				<div class="container mx-auto px-4">
					<!-- WHY max-w-7xl: Matches header max width for visual consistency -->
					<div class="max-w-7xl">
						<div class="text-center text-text-secondary">
							<p class="mb-2">
								Â© {new Date().getFullYear()} Portfolio. All rights reserved.
							</p>
							<!-- WHY flex gap-4 justify-center: Horizontal social link layout -->
							<div class="flex gap-4 justify-center">
								<a
									href="mailto:hello@example.com"
									class="hover:text-accent transition-colors"
								>
									Email
								</a>
								<a
									href="https://instagram.com"
									target="_blank"
									rel="noopener noreferrer"
									class="hover:text-accent transition-colors"
								>
									Instagram
								</a>
							</div>
						</div>
					</div>
				</div>
			</footer>
		</div>
	</body>
</html>

<style is:global>
	/* WHY system font stack: Fast loading, matches user's OS, no external requests */
	:root {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
			Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	img {
		display: block;
		max-width: 100%;
		height: auto;
	}
</style>
